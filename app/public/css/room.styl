.icon-sound:hover,    .icon-sound.active    { background-image: url("/img/i/sound.svg")    !important; }
.icon-help:hover,     .icon-help.active     { background-image: url("/img/i/help.svg")     !important; }
.btn-dsbld.icon-image:hover,    .btn-dsbld.icon-image.active    { background-image: url("/img/i/image-inverse.svg")    !important; }
.btn-dsbld.icon-settings:hover, .btn-dsbld.icon-settings.active { background-image: url("/img/i/settings-inverse.svg") !important; }
.btn-dsbld.icon-no-sound:hover, .btn-dsbld.icon-no-sound.active { background-image: url("/img/i/no-sound-inverse.svg") !important; }
.btn-dsbld.icon-sound:hover,    .btn-dsbld.icon-sound.active    { background-image: url("/img/i/sound-inverse.svg")    !important; }
.btn-dsbld.icon-help:hover,     .btn-dsbld.icon-help.active     { background-image: url("/img/i/help-inverse.svg")     !important; }

.btn
  display inline-block
  line-height 20px
  border none
  background #222
  color lightgrey
  padding 5px
  border-radius 5px
  cursor pointer
  &.btn-dsbld
    background-color grey
    color light-grey
    box-shadow none
    cursor default
    &:hover,
    &:focus,
    &.actv
      background-color grey
      color lightgrey
      box-shadow none
      cursor default
  &.btn-sml
    padding 0 2px
    font-size 12px
    line-height 12px
  &:focus,
  &:hover
    background white
    color black
    box-shadow 0 0 4px black
  &.actv,
  &.actv:hover
    background lightgrey
    color black
    box-shadow none
    cursor default
    border 1px solid grey
    padding 4px
  &.actv.btn-tgl:hover
    cursor pointer
    box-shadow 0 0 4px black
  &:active
    background lightgrey
  &.btn-wht
    background white
    color #333
    border 1px solid lightgrey
    padding 5px
    &.btn-dsbld
      background-color lightgrey
      color grey
      box-shadow none
      cursor default
      &:hover,
      &:focus,
      &.actv
        background-color lightgrey
        color grey
        box-shadow none
        cursor default
    &:hover 
      box-shadow 0 0 4px grey
      color black
    &:active 
      background lightgrey
      color black
    &.btn-sml:hover 
      box-shadow 0 0 2px grey
    &.btn-sml 
      padding 0 2px 1px 2px
    
  &.btn-icon
    width 29px
    height 29px
    background-size 21px !important
    background-repeat no-repeat !important
    background-position center center !important
    background-attachment local !important

  &.btn-rm
    border-radius 0 5px 5px 0
    border-left 0
    border 0
    position relative
    z-index 50
    margin-bottom 5px
    background lightgrey
    color #333
    &.actv:hover
      z-index 100
    &.actv
      z-index 100
    &:active,
    &:hover
      border 0
      padding 5px
      z-index 99
    &:active
      background white

    &.actv
      background-image url(/img/bg-1.png)
      padding 5px
      

  &.btn-close
    position absolute
    left 10px
    top 10px
    height 24px
    width 24px
    padding 0
    line-height 20px
    &.btn-img-rm
      box-sizing border-box
      -moz-box-sizing border-box
      -webkit-box-sizing border-box
      -o-box-sizing border-box
      border-radius 3px
      right 3px
      top 3px
      width 10px
      height 10px
      line-height 6px
      vertical-align middle
      text-align center
      font-size 10px

  &.btn-edtr-img
    height 100px
    vertical-align top

doesnotexist:-o-prefocus, .btn.btn-icon 
  border-radius: 0px;

