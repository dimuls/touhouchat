        &:hover
          .msg-unactv-btns
            display none
      &:last-child
        border-bottom 0
      .msg-hdr
        font-size 12px
        margin-bottom 5px
        color grey
      .msg-actv-btns,
      .msg-unactv-btns
        display none
      &:hover
        .msg-unactv-btns
          display inline
      a
        text-decoration none
        text-decoration-color #00cccc
        color #00cccc
        &:visited
          color #088
  .edtr
    position absolute
    right 10px
    left 10px
    bottom 10px
    .edtr-row
      width 100%
      padding-top 10px
      &:first-child
        padding-top 0
      &.edtr-row-imgs
        margin-top 5px
        background #222
        border-radius 5px 



