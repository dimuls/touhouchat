  -o-box-sizing border-box


input, textarea
  font-size 16px
  font-family: 'Play', sans-serif;

#inp-imgs
  position fixed
  left -1000px
  right -1000px

q
  display block
  color #006d37
  font-style italic
  quotes none

.pll-rght
  float right
  margin-left 5px
  &:first-child
    margin-left 0

