.col-cht
  height 100%
  min-height 600px
  z-index 100
  .msgs
    position absolute
    right 10px
    left 10px
    top 70px
    bottom 161px
    overflow-x hidden
    overflow-y auto
    background #222
    border-radius 5px
    color lightgrey
    min-height 300px
    .msg
      padding 10px
      border-bottom 1px solid grey
      .msg-in
        max-height 200px
        overflow-y auto
        overflow-x hidden
      &.msg-actv
        background lightgrey
        color #222
        .msg-actv-btns
